# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,.railway.app
CSRF_TRUSTED_ORIGINS=https://your-app.railway.app

# Database (Railway provides this automatically)
# DATABASE_URL=postgres://...

# MongoDB
MONGODB_URI=mongodb://localhost:27017/careatlas_ops
MONGODB_DATABASE=careatlas_ops

# Google OAuth (Required for authentication)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_DOMAIN=careatlas.com

# Domain restriction for login (comma-separated)
ALLOWED_EMAIL_DOMAINS=careatlas.com

# Tenovi Integration (Optional - runs in sandbox mode without these)
TENOVI_SANDBOX_MODE=True
TENOVI_API_KEY=
TENOVI_CLIENT_DOMAIN=
TENOVI_WEBHOOK_SECRET=
